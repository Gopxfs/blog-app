<section id="users">
  <h1>Users list</h1>
  <% @users = User.all %>
  <% @users.each do |user| %>
    <a id="user-card" href="/users/<%= user.id %>">
      <img src=<%= user.photo %> alt="User <%= user.id %> picture" width="150" height="150">
      <div id="user-info">
        <h2><%= user.name %></h2>
        <p>Number of posts: <%= user.posts_counter %></p>
      </div>
    </a>
  <% end %>
</section>