<section id='user-profile'>
  <div id='user-card-full'>
    <h1><%= @user.name %>'s Profile</h1>
    <div id='user-bio'>
      <img src=<%= @user.photo %> alt="User <%= @user.id %> picture" width="225" height="225">
      <p>
        <%= @user.bio %>
        <br>
        I've created <%= @user.posts_counter %> posts in total.
      </p>
    </div>
  </div>

  <div id='posts-list'>
    <% recent_posts = @user.show_recent_posts%>
    <% recent_posts.each do |post| %>
      <div class='post-card'>
        <div class='post-info'>
          <h2> <%= post.title %> </h2>
          <p> <%= post.comments_counter%> comments, <%= post.likes_counter%> likes </p>
        </div>
        <p> <%= post.text %> </p>
      </div>
    <% end %>

    <% if @user.posts_counter > 3 %>
      <%= link_to user_posts_url(@user), :action => 'go' do %>
        <div>
          See all posts
        </div>
      <% end %>
    <% end %>
  </div>
</section>